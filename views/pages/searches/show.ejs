<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>Search for a Book</title>
  </head>
  <body>
    <header>
      <div class="headerTop">
        <div class="logo">Best Books!</div>
        <div class="hamburgerMenu">
          <div class="line"></div>
          <div class="line"></div>
          <div class="line"></div>
        </div>
      </div>
      <nav class="none">
        <ul>
          <li><a href="/">Home Page</a></li>
          <li><a href="/searches/new">Search</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <% books.forEach(book => { %>
      <div class="bookCard">
        <img src="<%= book.image %> " alt="" />
        <h2 class="book_title"><%= book.title %></h2>
        <p class="book_auther"><%= book.auther %></p>
        <p class="book_description"><%= book.description.slice(0, 100) %> ...</p>

        <a class="book_select_btn" href="#">Select this Book</a>
      </div>
      <% }) %>
    </main>

    <footer></footer>
    <script src="/js/app.js"></script>
  </body>
</html>
